{
  "name": "zion-utils",
  "version": "0.0.9",
  "description": "JS utils collection",
  "main": "./dist/index.js",
  "umd:main": "./dist/index.umd.js",
  "jsnext:main": "./dist/index.esm.js",
  "unpkg": "./dist/index.umd.js",
  "source": "./src/index.ts",
  "scripts": {
    "dev": "microbundle watch",
    "build": "microbundle --compress",
    "ts-build": "tsc ./src/**/*.ts -t es5 -m umd --outDir ./dist --rootDir ./src",
    "prepublish": "npm run build",
    "prettier": "prettier --parser=typescript --write ./src/**/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser=typescript --write ./src/**/*.ts"
    ]
  },
  "author": "linyupark@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linyupark/zion-utils"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.x",
    "react-dom": "^17.x",
    "mitt": "^2.x",
    "currency.js": "^2.x"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "microbundle": "^0.12.4",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typescript": "^4.1.3",
    "currency.js": "^2.x"
  }
}
