{
  "name": "zion-utils",
  "version": "0.0.2",
  "description": "JS utils collection",
  "main": "./dist/index.js",
  "umd:main": "./dist/index.umd.js",
  "unpkg": "./dist/index.umd.js",
  "source": "./src/index.ts",
  "scripts": {
    "dev": "microbundle watch",
    "build": "tsc ./src/**/*.ts -t es5 -m umd --outDir ./dist --rootDir ./src && microbundle",
    "prepublish": "npm run build",
    "prettier": "prettier --parser=typescript --write ./src/**/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser=typescript --write ./src/**/*.ts"
    ]
  },
  "author": "linyupark@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linyupark/zion-utils"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "microbundle": "^0.12.4",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  }
}
